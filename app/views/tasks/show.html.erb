<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed == false %>
  <p><%= check_box("tag", tag.id, {checked: @task.completed}) %>This task is not completed</p>
<% else %>
  <p><%= check_box("tag", tag.id, {checked: @task.completed}) %>This task is completed</p>
<% end %>

<%= link_to "Back to list", tasks_path %>
